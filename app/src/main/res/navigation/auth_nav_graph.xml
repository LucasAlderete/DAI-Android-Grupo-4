<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.dai_android_grupo_4.auth.ui.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_pokemonListActivity"
            app:destination="@id/pokemonListActivity" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.dai_android_grupo_4.auth.ui.RegisterFragment"
        android:label="RegisterFragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <activity
        android:id="@+id/pokemonListActivity"
        android:name="com.example.dai_android_grupo_4.MainActivity"
        android:label="MainActivity" />

</navigation>
